<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventPage2">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:scaleType="fitXY"
        android:src="@drawable/time"

        />

    <TextView
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="29dp"
        android:layout_marginBottom="-90dp"
        android:layout_alignBottom="@id/imageView3"
        android:textSize="20dp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="181dp"
        android:text="Date"
        />

    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Date Of Event"
        android:layout_alignBottom="@id/imageView3"
        android:inputType="date"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="#403F3F"
        android:textSize="20dp"
        android:fontFamily="@font/barlowextrabold"
        android:gravity="center"
        android:background="@drawable/round1"                        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="-150dp"
        android:layout_marginRight="15dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="29dp"
        android:layout_marginBottom="-235dp"
        android:layout_alignBottom="@id/imageView3"
        android:textSize="20dp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="181dp"
        android:text="Duration(In Days)"
        />

    <EditText
        android:id="@+id/duration"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Duration"
        android:layout_alignBottom="@id/imageView3"
        android:inputType="number"
        android:textColor="#403F3F"
        android:textSize="20dp"
        android:fontFamily="@font/barlowextrabold"
        android:gravity="center"
        android:background="@drawable/round1"                        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="-280dp"
        android:layout_marginRight="15dp"

        />

    <Button
        android:id="@+id/next"
        android:layout_width="293dp"
        android:layout_height="49dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:backgroundTint="#302863"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_alignBottom="@id/duration"
        android:gravity="center"
        android:layout_marginBottom="-100dp"
        android:text="Next"
        android:textAppearance="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:textSize="15dp"

        />




</RelativeLayout>

